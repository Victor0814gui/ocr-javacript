// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Room {
  id          String @id
  title       String
  description String
  users       User[]
}

model User {
  id     String  @id
  name   String
  roomId String?
  room   Room?   @relation(fields: [roomId], references: [id])
}
